
<div class="container ">
     <form class="form-signin">
       <h2 class="form-signin-heading">login</h2>
       <label for="inputEmail">Email</label>
       {{input type ="email" class="form-control" value = title placeholder = "Email Adress" }}
       <label for="inputPassword" class="sr-only">Password</label>
       {{input type = "password" class= "form-control" value = password placeholder = "Password"}}
       <div class="checkbox">
         {{#if registering}}
         <label for="name" class="sr-only">name</label>
         {{input type ="text" class="form-control" value = title placeholder = "full Name" }}
         {{input type ="text" class="form-control" value = title placeholder = "username" }}
         {{/if}}

         
         <label>
           <input type="checkbox" value="remember-me"> Remember me
         </label>
       </div>
         <button {{action 'authenticate'}}class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
       <button {{action 'register'}} class = "btn btn-lg btn-success btn-block"  type="submit">Register</button>
          </form>
   </div>
