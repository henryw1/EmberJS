      <div class="form-group">
        <label class="control-label">Email address</label>
        {{input type="text" class="form-control" value=email placeholder= "Email Adress"}}
      </div>
      <div class="form-group">
        <label class="control-label">Password</label>
          {{input type="password" class="form-control" value=password placeholder="Password"}}
      </div>

       <div class="checkbox">
         <label>
           <input type="checkbox" value="remember-me"> Remember me
         </label>
       </div>

         <button {{action 'register'}}class="btn btn-lg btn-primary btn-block" type="submit" data-toggle="snackbar" data-style="toast" data-content="Registration Successful.">Register</button>

           Toast
         </button>
          </form>
   </div>
